{
  "name": "profiles-etl-combiner",
  "version": "1.0.0",
  "description": "Retrieves JSON from ETLs, combines the JSON and imports into mongodb",
  "main": "app.js",
  "scripts": {
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "check-unit-coverage": "istanbul check-coverage --config .istanbul.unit.yml",
    "generate-unit-coverage": "yarn istanbul -- cover _mocha -- --recursive test/unit",
    "generate-coverage": "yarn istanbul -- cover _mocha -- --recursive",
    "git-hook": "yarn lint && yarn generate-unit-coverage && yarn check-unit-coverage",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook && yarn snyk test",
    "start": "node app.js",
    "start-watch": "nodemon app.js | ./node_modules/bunyan/bin/bunyan & nodemon -e scss -x yarn build-css -- compact",
    "test": "NODE_ENV=test mocha --recursive test",
    "test-unit": "NODE_ENV=test mocha --recursive test/unit",
    "test-integration": "NODE_ENV=test mocha --recursive test/integration",
    "test-watch": "yarn test -- --watch --reporter min",
    "test-watch-local": "MONGO_HOST=localhost yarn test -- --watch --reporter min",
    "travis": "yarn lint && yarn generate-coverage && yarn check-coverage && yarn upload-coverage-coveralls",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "mongodb",
    "nhsuk"
  ],
  "author": "Mark Harrop",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-nhsuk": "^0.3.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-watch": "^3.1.2",
    "husky": "^0.14.2",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.4.2",
    "nock": "^9.0.13",
    "snyk": "^1.36.2"
  },
  "dependencies": {
    "azure-storage": "^2.2.1",
    "moment": "^2.18.1",
    "nhsuk-bunyan-logger": "^1.4.0",
    "node-schedule": "^1.2.3",
    "pretty-hrtime": "^1.0.3",
    "require-environment-variables": "^1.1.2"
  }
}
